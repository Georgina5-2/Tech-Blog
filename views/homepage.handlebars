<div class="allPosts p-4">
{{#each posts as |post| }}
    <div class="card my-3">
        <a href="/post/{{post.id}}" class="card-header">{{post.title}}</a>
        <div class="card-body">
            <p>{{post.content}}</p>
        </div>
        <div class="card-footer text-muted">
            Posted by {{post.user.username}} on {{format_date post.date_created}}
        </div>
    </div>
{{/each}}
</div>