<div class="login p-6 my-2 col-6">
    <h2 class="log-header my-3">Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-login my-3">Username:</label>
        <input class="form-input my-3" type="text" id="username-login"/>
      </div>
      <div class="form-group">
        <label for="password-login my-3">Password:</label>
        <input class="form-input my-3" type="password" id="password-login"/>
      </div>
      <div class="form-group">
        <button class="btn my-3" type="submit">Sign Up!</button>
      </div>
      <a href="/login">Login instead</a>
    </form>
  </div> 
</div>

<script src="./js/signup.js"></script>